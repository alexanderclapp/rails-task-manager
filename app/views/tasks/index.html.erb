<ul>
<% @tasks.each do |task| %>
  <li><h2><%= link_to task.name, task_path(task) %>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %> </h2></li>
<% end %>
</ul>
<%= link_to "Create task", new_task_path %>
